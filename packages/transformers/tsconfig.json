{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      // "incremental": true,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ]
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.d.ts",
  ],
    "exclude": [
      "node_modules"
    ],
    "typeRoots": [
      "../node_modules/@types",
      "../@types"
    ]
  }